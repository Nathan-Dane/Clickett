                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="20"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </Grid>
                                    </Border>
                                    <TextBlock Foreground="{Binding Source={StaticResource FGCol2}}" Margin="15,3,20,0" Text="Windows" FontFamily="LEMON MILK Pro FTR" FontSize="13"/>
