                                                <TextBox Name="minutesInput" LostFocus="HandleTextChange" TextChanged="HandleInterTextChange" HorizontalAlignment="Left" BorderThickness="2" Margin="65,3,0,3" Width="75" Background="{Binding Source={StaticResource InBacCol}}" BorderBrush="{Binding Source={StaticResource InBorCol}}" FontFamily="LEMON MILK Pro FTR" Foreground="{Binding Source={StaticResource FGCol3}}" Padding="2,0,0,0" PreviewTextInput="NumberValidationTextBox" IsTabStop="False">
