                                                <!--Seconds Input-->
                                                <TextBox Name="secondsInput" LostFocus="HandleTextChange" TextChanged="HandleInterTextChange" HorizontalAlignment="Center" BorderThickness="2" Margin="75,3,0,3" Width="75" Background="{Binding Source={StaticResource InBacCol}}" BorderBrush="{Binding Source={StaticResource InBorCol}}" FontFamily="LEMON MILK Pro FTR" Foreground="{Binding Source={StaticResource FGCol3}}" Padding="2,0,0,0" PreviewTextInput="NumberValidationTextBox" IsTabStop="False">
                                                    <TextBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="5"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                                <TextBlock Foreground="{Binding Source={StaticResource FGCol1}}" Text="Seconds" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,70,0"/>
                                                <!--Milliseconds Input-->
                                                <TextBox Name="millisInput" LostFocus="HandleTextChange" TextChanged="HandleInterTextChange" HorizontalAlignment="Right" BorderThickness="2" Margin="0,3,3,3" Width="75" Background="{Binding Source={StaticResource InBacCol}}" BorderBrush="{Binding Source={StaticResource InBorCol}}" FontFamily="LEMON MILK Pro FTR" Foreground="{Binding Source={StaticResource FGCol3}}" Padding="2,0,0,0" PreviewTextInput="NumberValidationTextBox" IsTabStop="False" >
