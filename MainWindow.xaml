                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="20"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </Grid>
                                    </Border>
                                    <Border Name="trayBorder" CornerRadius="{Binding Source={StaticResource MinRad}}" Margin="0,5,0,0" Height="{Binding Source={StaticResource MinBoxHeight}}" Background="{Binding Source={StaticResource BoxBackCol}}">
                                        <Grid>
                                            <TextBlock Foreground="{Binding Source={StaticResource FGCol1}}" Text="System Tray Icon" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
