                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="5"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                                <TextBlock Foreground="{Binding Source={StaticResource FGCol1}}" Text="Millis" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,83,0"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <Button Click="InterTypeSwap" Style="{StaticResource MyButton}" Height="{Binding Source={StaticResource MinBoxHeight}}" Width="{Binding Source={StaticResource MinBoxHeight}}" HorizontalAlignment="Right" Background="{Binding Source={StaticResource BoxBackCol}}" BorderThickness="0" Margin="0,0,5,0" IsTabStop="False" Focusable="False">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="{Binding Source={StaticResource MinRad}}"/>
                                            </Style>
                                        </Button.Resources>
                                        <Image Source="/res/Swap.png" Margin="3,0,3,0" RenderOptions.BitmapScalingMode="HighQuality" VerticalAlignment="Center"/>
                                    </Button>
                                </Grid>
                                <TextBlock Foreground="{Binding Source={StaticResource FGCol2}}" Margin="20,3,20,0" Text="Options" FontFamily="LEMON MILK Pro FTR" FontSize="13"/>
                                <Grid Margin="0,1,0,0">
                                    <Border Name="locBorder" CornerRadius="{Binding Source={StaticResource MinRad}}" Margin="5,0,210,0" Height="{Binding Source={StaticResource MinBoxHeight}}" Background="{Binding Source={StaticResource BoxBackCol}}" HorizontalAlignment="Stretch">
                                        <Grid>
                                            <TextBlock Name="locText" Foreground="{Binding Source={StaticResource FGCol1}}" Text="Location" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,8,0"/>
                                            <Grid Name="locGrid">
                                                <TextBlock Foreground="{Binding Source={StaticResource FGCol2}}" Text="x" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,129,2"/>
                                                <TextBox Name="xPosInput" LostFocus="HandleLocTextChange" TextChanged="HandleInterTextChange" HorizontalAlignment="Right" BorderThickness="2" Margin="0,3,85,3" Width="40" Background="{Binding Source={StaticResource InBacCol}}" BorderBrush="{Binding Source={StaticResource InBorCol}}" FontFamily="LEMON MILK Pro FTR" Foreground="{Binding Source={StaticResource FGCol3}}" Padding="2,0,0,0" PreviewTextInput="NumberValidationTextBox" IsTabStop="False" >
                                                    <TextBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="5"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                                <TextBlock Foreground="{Binding Source={StaticResource FGCol2}}" Text="y" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,69,2"/>
                                                <TextBox Name="yPosInput" LostFocus="HandleLocTextChange" TextChanged="HandleInterTextChange" HorizontalAlignment="Right" BorderThickness="2" Margin="0,3,25,3" Width="40" Background="{Binding Source={StaticResource InBacCol}}" BorderBrush="{Binding Source={StaticResource InBorCol}}" FontFamily="LEMON MILK Pro FTR" Foreground="{Binding Source={StaticResource FGCol3}}" Padding="2,0,0,0" PreviewTextInput="NumberValidationTextBox" IsTabStop="False" >
                                                    <TextBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="5"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                                <Button Name="locSetButt" Style="{StaticResource MyButton}" Click="SetLoc" HorizontalAlignment="Right" BorderThickness="0" Margin="0,3,145,3" Width="40" FontSize="8" IsTabStop="False" Focusable="False">
                                                    <Button.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="5"/>
                                                        </Style>
                                                    </Button.Resources>
                                                    <Button.Background>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <LinearGradientBrush.RelativeTransform>
                                                                <TransformGroup>
                                                                    <RotateTransform Angle="-90"/>
                                                                    <TranslateTransform/>
                                                                </TransformGroup>
                                                            </LinearGradientBrush.RelativeTransform>
                                                            <GradientStop Color="#FF45B4B4"/>
                                                            <GradientStop Color="#FF45AA96" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>
                                                    <TextBlock Text="Set" FontFamily="LEMON MILK Pro FTR" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#CCFFFFFF" FontSize="14"/>
                                                </Button>
                                                <Button Style="{StaticResource MyButton}" Background="AntiqueWhite" Name="LocBut" HorizontalAlignment="Right" Width="15" Height="15" VerticalAlignment="Center" Margin="0,0,5,0" Click="ToggleLoc" IsTabStop="False">
                                                    <Button.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="20"/>
                                                        </Style>
                                                    </Button.Resources>
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <Border CornerRadius="{Binding Source={StaticResource MinRad}}" Margin="5,0,5,0" Height="{Binding Source={StaticResource MinBoxHeight}}" Background="{Binding Source={StaticResource BoxBackCol}}" HorizontalAlignment="Right" Width="200">
                                        <Grid>
                                            <TextBlock Name="trigText" Foreground="{Binding Source={StaticResource FGCol1}}" Text="Trigger" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,8,0"/>
                                            <Border Name="trigBorder" HorizontalAlignment="Right" BorderThickness="0" Margin="0,3,46,3" Width="76" CornerRadius="5" Background="{Binding Source={StaticResource InBacCol}}" BorderBrush="{Binding Source={StaticResource InBorCol}}">
                                                <TextBlock Name="triggerDis" Text="F" FontFamily="LEMON MILK Pro FTR" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding Source={StaticResource FGCol1}}" FontSize="14" Opacity="0.8"/>
                                            </Border>
                                            <Button Name="trigSet" Style="{StaticResource MyButton}" Click="NewTrigger" HorizontalAlignment="Right" BorderThickness="0" Margin="0,3,3,3" Width="40" FontSize="8" IsTabStop="False" Focusable="False">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </Button.Resources>
                                                <Button.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <LinearGradientBrush.RelativeTransform>
                                                            <TransformGroup>
                                                                <RotateTransform Angle="-90"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </LinearGradientBrush.RelativeTransform>
                                                        <GradientStop Color="#FF45B4B4"/>
                                                        <GradientStop Color="#FF45AA96" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Button.Background>
                                                <TextBlock Text="Set" FontFamily="LEMON MILK Pro FTR" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#CCFFFFFF" FontSize="14"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid Margin="0,5,0,0">
                                    <Border CornerRadius="{Binding Source={StaticResource MinRad}}" Margin="5,0,210,0" Height="{Binding Source={StaticResource MinBoxHeight}}" Background="{Binding Source={StaticResource BoxBackCol}}" HorizontalAlignment="Stretch">
                                        <Grid>
                                            <Grid Name="burstGrid">
                                                <TextBlock Foreground="{Binding Source={StaticResource FGCol2}}" Text="Count" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,130,0"/>
