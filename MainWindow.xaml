                                            <TextBlock Foreground="{Binding Source={StaticResource FGCol1}}" Text="Minimise to System Tray" FontFamily="LEMON MILK Pro FTR" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
