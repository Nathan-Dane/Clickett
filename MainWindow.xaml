                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="{Binding Source={StaticResource MinRad}}"/>
                                    </Style>
                                </Button.Resources>
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
