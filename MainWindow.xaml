                                    </Border>
                                    <Border Name="animBorder" CornerRadius="{Binding Source={StaticResource MinRad}}" Margin="0,5,0,0" Height="{Binding Source={StaticResource MinBoxHeight}}" Background="{Binding Source={StaticResource BoxBackCol}}">
